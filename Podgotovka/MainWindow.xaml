<Window x:Class="Podgotovka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Podgotovka"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Image Source="Resources/Приятный шелест.png" HorizontalAlignment="Left" Margin="10"></Image>
        <TextBlock Text="Приятный шелест" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32px"></TextBlock>
        <Grid Background="#C6D7FF" Panel.ZIndex="-1"></Grid>
        <Grid Background="#46B29D" Panel.ZIndex="-1" Grid.Row="2"></Grid>
        <Frame NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered" Grid.Row="1" Name="MainFrame"></Frame>
        <Button x:Name="BtnBack" Content="Back" Width="100" Height="30" HorizontalAlignment="Right" Margin="10" Click="BtnBack_Click"></Button>
    </Grid> 
</Window>
